<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/baseStyle.css') }}">

    {% block stylesheets %}{% endblock %}

</head>
<body>
{% block header %}

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="col-4">
            <a class="navbar-brand float-left" href="#">TimePool</a>
        </div>

        <div class="col-4">
            <p class="d-flex justify-content-center" id="welcome">Welcome user {#{{familyName}} {{givenName}}#} !</p>
        </div>

        <div class="col-4">
            <div class="d-flex justify-content-end">
                <img src="https://lh3.googleusercontent.com/-XL2fIZfDBtw/VzUs32K_hhI/AAAAAAAAAKA/6wgUU8BaBH8AJ9yPPb-4vHo88DKX6yyrA/w800-h800/Alien-512.png" style="width: 70px; height:70px;">
                <!-- <img src="user.img" alt="imgProfile"> -->
            </div>
        </div>
    </nav>

{% endblock %}

{% block body %}{% endblock %}

{% block footer %}

    <!-- Footer -->
    <div class="container d-flex justify-content-between">
        <a href="#">CGU</a>
        <a href="#">Copyright</a>
        <a href="#">About</a>
        <a href="#">Contact</a>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}
<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/jquery-3.3.1.min.js') }}" type="text/javascript"></script>
</body>
</html>
